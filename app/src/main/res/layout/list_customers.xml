<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView3_CustomerID"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textView3_FName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textView3_LName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textView3_CarMake"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textView3_CarModel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/textView3_CarCost"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>